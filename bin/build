#!/bin/sh

rm -rf dist

find src -type d -printf "%P\0" \
  | xargs -0 -I{} -P0 xargs mkdir dist/{}

find src -type f -regex '.*\.\(jpg\|gif\|jpeg\|png\|webp\|ico\|css\)' -printf "%P\0" \
  | xargs -0 -I{} -P0 cp src/{} dist/{}

find src -name \*.md -printf '%P\0' \
  | xargs -0 -n1 -P1 sh -c "pandoc \
    --data-dir=\$(pwd) \
    -d config.yaml \
    -o dist/\"\${0%.*}\".html src/\"\$0\""
